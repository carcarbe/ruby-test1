<h1>Listing contents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Order</th>
    <th>Section</th>
    <th>Project</th>
    <th>Info</th>
    <th>Kind</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%= content.name %></td>
    <td><%= content.order %></td>
    <td><%= content.section_id %></td>
    <td><%= content.project_id %></td>
    <td><%= content.info %></td>
    <td><%= content.kind %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

